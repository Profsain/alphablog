<div class="container">

  <%= form_with(model: @article, local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :title %> <br>
      <%= f.text_field :title, :class => "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :description %><br>
      <%= f.text_area :description, :class => "form-control", :rows => "6" %>
    </div>
    <div class="mb-3">
      <%= f.submit :class => "btn btn-primary mb-3" %>
    </div>
  <% end %>
  
</div>