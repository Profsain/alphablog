<div>
  <h1>Edit Article</div>
 
  <hr>
  <%= form_with(model: @article, local: true) do |f| %>
    <div>
      <%= f.label :title %> <br>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>